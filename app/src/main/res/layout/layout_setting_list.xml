    android:id="@+id/yjfk_text"
    android:layout_alignParentRight="true"
    android:drawableRight="@mipmap/ic_arrows_right"
    android:padding="16dp"/>
</RelativeLayout>

    <RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
