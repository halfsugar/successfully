    <RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bbgx"
    android:text="版本更新"
    android:layout_weight="1.0"
    android:textSize="18dp"
    android:gravity="center|left"
