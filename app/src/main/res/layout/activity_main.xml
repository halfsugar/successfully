<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#e6e1e1"
    android:layout_height="match_parent">
   <include layout="@layout/tools"/>
   <include layout="@layout/layout_homescore"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_rocket"
            android:text="手机加速"
            android:drawablePadding="8dp"
            android:id="@+id/rocket"
            android:gravity="center"
            android:padding="16dp"
            android:background="#ffffff"
            android:layout_margin="1dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_softmgr"
            android:text="软件管家"
            android:id="@+id/softmgr"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="16dp"
            android:background="#ffffff"
            android:layout_margin="1dp" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/phonemgr"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/icon_phonemgr"
            android:text="手机检测"
            android:gravity="center"
            android:padding="16dp"
            android:background="#ffffff"
            android:layout_margin="1dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_telmgr"
            android:text="通讯大全"
            android:id="@+id/telmgr"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="16dp"
            android:background="#ffffff"
            android:layout_margin="1dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_filemgr"
            android:text="文件管理"
            android:id="@+id/filemgr"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="16dp"
            android:background="#ffffff"
            android:layout_margin="1dp" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/sdclean"
            android:drawableTop="@mipmap/icon_sdclean"
            android:text="垃圾清理"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:background="#ffffff"
            android:layout_margin="1dp" />
    </LinearLayout>

</LinearLayout>